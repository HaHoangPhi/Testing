    <div class="my-5">
      <div class="my-3">
        <h2 class=" text-center fw-bold">TOUR NỔI BẬT</h2>
      </div>

      <article class="mt-3 row row-cols-1 row-cols-md-2 row-cols-xl-4 row-gap-3">
        <% tournoibat.map(item=>{ %>
          <div class="col">
            <div class="card h-100">
              <img src=<%=item.hinhanh%> class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%=item.ten_tour%>
                </h5>
                <p class="card-text">
                  <%=item.noidung%>
                </p>
              </div>
              <div class="card-body d-flex justify-content-between align-items-center">
                <span class="card-text">
                  <%=item.gia%> VND
                </span>
                <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Best-Modal-<%= item.ma_tour %>">Đặt
                  Tour</a>
              </div>
            </div>
          </div>

          <!--BEST TOUR MODAL-->

          <div class="modal fade" id="Best-Modal-<%= item.ma_tour %>" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">
                    Booking form
                  </h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body border-bottom">
                  <div>
                    <p>Tên Tour :<b> <%=item.ten_tour%></b></p>
                    <p>Giá Tour : <span style="color: red"> <%=item.gia%> </span>VNĐ</p>
                  </div>
                </div>
                <div class="modal-body">
                  <form action="/" id="datTour-besttour-<%= item.ma_tour %>" method="post" onsubmit="(alert('succcess'))">
                    <div class d-none>
                      <input type="hidden" name="matour" value="<%=  item.ma_tour %>">
                      <input type="hidden" name="tentour" value="<%= item.ten_tour %>">
                      <input type="hidden" name="giatour" value="<%= item.gia %>">
                    </div>
                    <div class="mb-2">
                      <label for="hovaten" class="form-label"> Họ và tên <span style="color: red">*</span></label>
                      <input type="text" class="form-control" id="hovaten" name="hovaten" required />
                    </div>
                    <div class="mb-2">
                      <label for="sdt" class="form-label"> Số điện thoại <span style="color: red">*</span></label>
                      <input type="text" class="form-control" id="sdt" name="sdt" required />
                    </div>
                    <div class="mb-2">
                      <label for="email" class="form-label">Email</label>
                      <input type="email" class="form-control" id="email" name="email" />
                    </div>
                    <div class="mb-2">
                      <label for="message-text" class="col-form-label">Message:</label>
                      <textarea class="form-control" id="message-text" name="message"></textarea>
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Thoát
                  </button>
                  <button type="submit" form="datTour-besttour-<%= item.ma_tour %>" class="btn btn-primary">
                    Đặt Tour
                  </button>
                </div>
              </div>
            </div>
          </div>
          
          <% }) %>
      </article>
    </div>
    <!-- END CONTENTS__BEST TOUR -->
